{
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Warning"
    }
  },

  "Monitoring": {
    "HandleDotNetLogs": true,
    "RootLogPath": "Logs",
    "GrandOutput": { // Configuration by handler (e.g. TextFileConfiguration -> TextFile)
      "Handlers": {
        "Console": true,
        "TextFile": {
          "Path": "Text"
        }
      }
    }
  }
}
